<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".procedureList">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="537dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="142dp"
        android:layout_marginEnd="8dp"
        android:background="#00868282"
        android:orientation="vertical">

        <Button
            android:id="@+id/button2"
            android:layout_width="102dp"
            android:layout_height="85dp"
            android:background="#D08ADD"
            android:onClick="peeling"
            android:text="Peeling"
            android:textSize="24sp" />

        <Button
            android:id="@+id/button3"
            android:layout_width="160dp"
            android:layout_height="85dp"
            android:background="#BAE98A"
            android:onClick="stretch"
            android:text="Stretch Marks"
            android:textSize="24sp" />

        <Button
            android:id="@+id/button4"
            android:layout_width="210dp"
            android:layout_height="85dp"
            android:background="#7FBDEE"
            android:onClick="hairloss"
            android:text="HairLoss"
            android:textSize="24sp" />

        <Button
            android:id="@+id/button5"
            android:layout_width="280dp"
            android:layout_height="85dp"
            android:background="#E4D76B"
            android:onClick="tatoo"
            android:text="Tatoo Removal"
            android:textSize="24sp" />

        <Button
            android:id="@+id/button6"
            android:layout_width="320dp"
            android:layout_height="85dp"
            android:background="#DF4949"
            android:onClick="laser"
            android:text="Laser Treatment"
            android:textSize="24sp" />

        <Button
            android:id="@+id/button7"
            android:layout_width="match_parent"
            android:layout_height="85dp"
            android:background="#6DBDC9"
            android:onClick="anti"
            android:text="Anti Aging"
            android:textSize="24sp" />

    </LinearLayout>

    <TextView
        android:id="@+id/textView"
        android:layout_width="346dp"
        android:layout_height="67dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="17dp"
        android:layout_marginTop="44dp"
        android:layout_marginEnd="48dp"
        android:fontFamily="cursive"
        android:text="CLICK TO KNOW MORE"
        android:textAlignment="center"
        android:textColor="@color/colorAccent"
        android:textSize="30sp"
        android:textStyle="bold" />
</RelativeLayout>